
.form_button {
  background-color: transparent;
  padding: 0;
  margin: 0;
  text-align: left;
}
.form_button::after {
  border: 0px;
}


page, .container {
  height: 100%;
}
.container > view {
  width: 100%;
  display: block;
}
.header {
  position: relative;
}
.header .background-img {
  width: 100%;
  height: 150px;
  position: relative;
  box-sizing: border-box;
  z-index: -1;
  overflow-y: hidden;
}
.header .background-img image {
  width: 100%;
  height: 100%;
}
.header .pannel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px 0px 20px;
  border-top: 10px solid #f1f1f1;
}
.header .pannel-header .pannel-title {
  display: flex;
  align-items: center;
}
.header .pannel-header .pannel-title .title {
  font-size: 17px;
}
.header .pannel-header .pannel-title .sub-title {
  font-size: 12px;
  padding-left: 5px;
  color: #757575;
  margin-top: 5px;
}
.header .pannel-header .right-title {
  font-size: 12px;
  color: #2196F3;
  margin-top: 5px;
}
.header .pannel-header .right-more {
  font-size: 12px;
  color: #757575;
  margin-top: 5px;
}
.header .pannel-content {
  display: flex;
  align-items: center;
  justify-items: center;
  padding: 18px 0;
  font-size: 24rpx;
}
.header .pannel-content > view {
  flex: 1;
  text-align: center;
}
.header .pannel-content > view image {
  width: 40px;
  height: 40px;
}
.header .pannel-content .icon-top {
  box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.4);
  border-radius: 20rpx;
}
.header .pannel-content .fun-txt {
  margin-top: 10rpx;
}
.header .level-2 {
  position: absolute;
  bottom: 32rpx;
  width: 100%;
}
.header .level-2 .today-expend {
  font-size: 64rpx;
  margin-bottom: 24rpx;
}
.header .level-2 > view {
  padding: 0;
}
.header .cover-title {
  font-size: 24rpx;
  color: white;
  background: rgba(0, 0, 0, 0.3);
  padding: 4rpx 15rpx 8rpx 12rpx;
  border-radius: 4rpx;
}
.header .no-read-msg:after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  top: 0;
  right: 0;
  border-radius: 50%;
  background: #FF0000;
}
.header .pay-num {
  background: #2056ae;
  margin: 0 4rpx;
}
.header .notification {
  position: absolute;
  top: 42rpx;
  right: 42rpx;
  width: 60rpx;
  height: 60rpx;
  background: black;
  border-radius: 50%;
  padding: 8rpx;
}
.header .notification image {
  width: 100%;
  height: 100%;
}
.header .jz-icon-xiaoxi {
  font-size: 54rpx;
  position: absolute;
  top: 32rpx;
  right: 48rpx;
}
.zan-btns.new-record {
  margin: 0;
}
.zan-btns.new-record .jz-btn {
  background: #2196F3;
  color: white;
  margin: 15px;
}
.statement-list {
  margin-bottom: 40rpx;
}
.statement-list > .surplus {
  text-align: center;
}
.statement-list > .surplus > text {
  font-size: 24rpx;
  padding: 0 12rpx;
}
.statement-list > .total {
  text-align: right;
  margin: 0 32rpx;
}
.statement-list > .total > text {
  font-size: 24rpx;
}
.statement-list > .total > text:first-child {
  padding-right: 16rpx;
}
.row {
  display: block;
  align-items: center;
  margin: 0 20px;
  border-bottom: 2rpx solid #f4f4f4;
  padding: 16rpx 0;
  color: #212121;
}
.row .information {
  display: flex;
  align-items: center;
  flex: 1;
  margin-top: 8px;
}
.row .user-info {
  display: flex;
  align-items: center;
}
.row .user-info .title {
  font-size: 14px;
}
.row .user-info .icon {
  margin-right: 16rpx;
  display: flex;
  align-items: center;
}
.row .user-info .icon image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 40px;
}
.row .st-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.row .st-title > view {
  margin-bottom: 4rpx;
}
.row .st-title .title {
  font-size: 28rpx;
}
.row .st-title .description {
  color: #757575;
  font-size: 24rpx;
}
.row .st-title .time {
  color: #757575;
  font-size: 24rpx;
}
.row .st-bottom {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
}
.row .st-bottom > view {
  margin-bottom: 4rpx;
}
.row .st-bottom .title {
  font-size: 28rpx;
}
.row .st-bottom .description {
  color: #757575;
  font-size: 24rpx;
  margin-left: 20rpx;
  display: flex;
}
.row .st-bottom .time {
  color: #757575;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.no-more-data {
  text-align: center;
  color: #999;
  background: #efefef;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

