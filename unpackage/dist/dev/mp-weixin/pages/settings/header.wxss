.header {
  position: relative;
  color: white;
  height: 380rpx;
}
.header .bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}
.header .level-2 {
  position: absolute;
  bottom: 32rpx;
  width: 100%;
}
.header .level-2 .today-expend {
  font-size: 64rpx;
  margin-bottom: 24rpx;
}
.header .level-2 > view {
  padding: 0 24rpx;
}
.pannel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px 10px 15px;
}
.pannel-header .pannel-title {
  display: flex;
  align-items: center;
}
.pannel-header .pannel-title .title {
  font-size: 28rpx;
}
.pannel-header .pannel-title .sub-title {
  font-size: 12px;
  padding-left: 5px;
  color: #757575;
  margin-top: 5px;
}
.pannel-header .right-title {
  font-size: 12px;
  color: #2196F3;
  margin-top: 5px;
}
.pannel-header .right-more {
  font-size: 12px;
  color: #757575;
  margin-top: 5px;
}
.cover-setting .item {
  width: 25%;
  display: inline-block;
  position: relative;
}
.cover-setting .close-item {
  position: absolute;
  right: 10px;
  top: 1px;
  background: red;
  width: 15px;
  height: 15px;
  text-align: center;
  border-radius: 50%;
  font-size: 14px;
  line-height: 12px;
  color: white;
}
.cover-setting image {
  width: 95%;
  height: 80px;
}

