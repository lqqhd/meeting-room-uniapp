.cropper-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  padding: 0;
  box-sizing: border-box;
  line-height: 50px;
}
.cropper-buttons .upload,
.cropper-buttons .getCropperImage {
  text-align: center;
  width: 100%;
  background: #1976D2;
  border-radius: 10rpx;
  margin: 0 20rpx;
  color: white;
}

