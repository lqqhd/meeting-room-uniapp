@charset "UTF-8";
.container {
  background: #f2f2f2;
}
.calendar-main {
  background-color: white;
}
.calendar-header {
  font-size: large;
  color: #2196F3;
  padding: 8px 0;
  margin: 0 !important;
}
#calendar {
  background: white;
  margin-bottom: 16rpx;
  box-shadow: 0 0 10rpx #ccc;
  padding-bottom: 12rpx;
}
.col999 {
  color: #999;
}
.left-amount {
  font-size: 24rpx;
  text-align: right;
  padding-top: 24rpx;
}
.left-amount > text {
  margin-right: 12rpx;
}
.ljt-tab {
  height: 80rpx;
  line-height: 80rpx;
  background: white;
  border-bottom: 1px solid #efefef;
  border-top: 1px solid #efefef;
}
.ljt-tab .time {
  border-right: 1px solid #f4f4f4;
  color: #999;
}
.ljt-tab .active {
  color: #2196F3;
  border-bottom: 2px solid #2196F3;
}
.ljt-tab > view {
  display: inline-block;
  width: 33%;
  text-align: center;
}
.assets {
  background: white;
}
.assets .mutiple .parent-node {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fefefe;
  border-bottom: 1px solid #f4f4f4;
  padding: 32rpx 24rpx;
}
.assets .mutiple .parent-node .title {
  font-size: 32rpx;
}
/* 日历样式 */
#calendar .box {
  display: flex;
}
#calendar .box-lr {
  flex-direction: row;
}
#calendar .box-rl {
  flex-direction: row-reverse;
}
#calendar .box-tb {
  flex-direction: column;
}
#calendar .selected-bg {
  background: #ccc;
}
#calendar .box-pack-center {
  justify-content: center;
}
#calendar .box-align-center {
  align-items: center;
}
#calendar .box-wrap {
  flex-wrap: wrap;
}
#calendar .flex {
  flex-grow: 1;
}
#calendar .calendar-header {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  padding: 0 28rpx;
  background: white;
  color: #757575;
  font-size: 40rpx;
}
#calendar .calendar-header .selectDate {
  display: inline-block;
  position: relative;
  padding-right: 36rpx;
}
#calendar .calendar-header .selectDate image {
  position: absolute;
  right: 0;
  top: 0;
  margin-top: 26rpx;
  width: 30rpx;
  height: 30rpx;
}
#calendar .calendar-header .select-type {
  font-size: 14px;
}
#calendar .calendar-header .select-type picker {
  display: inline-block;
}
#calendar .calendar-header .select-type image {
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-top: 24rpx;
  margin-right: 8rpx;
}
#calendar .weeks {
  height: 60rpx;
  line-height: 60rpx;
  color: #999;
  border-bottom: 2rpx solid #f3f3f3;
}
#calendar .week {
  text-align: center;
}
#calendar .days {
  height: 480rpx;
}
#calendar .grid {
  width: 107.1428571429rpx;
}
#calendar .day {
  width: 70rpx;
  height: 70rpx;
  color: black;
  font-size: 32rpx;
  font-weight: 400;
}
#calendar .border-radius {
  border-radius: 50%;
  position: relative;
  left: 0;
  top: 0;
  color: #fff;
}
#calendar .today {
  background: #2196F3;
}
#calendar .start-bg {
  background: #FF7F00;
}
#calendar .start-bg:after {
  content: '';
  position: absolute;
  bottom: -6px;
  left: 0;
  right: 0;
  width: 3px;
  height: 3px;
  text-align: center;
  background: #FF7F00;
  left: 50%;
  margin-left: -2px;
  border-radius: 50%;
}
#calendar .end-bg {
  background: #8B8B83;
}
#calendar .end-bg:after {
  content: '';
  position: absolute;
  bottom: -6px;
  left: 0;
  right: 0;
  width: 3px;
  height: 3px;
  text-align: center;
  background: #8B8B83;
  left: 50%;
  margin-left: -2px;
  border-radius: 50%;
}
.tiaomu {
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #f4f4f4;
  padding: 16rpx;
}
.tiaomu .money {
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.tiaomu .date-time {
  width: 84rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
}
.tiaomu .information {
  display: flex;
  flex: 1;
}
.tiaomu .information .description {
  color: #757575;
  margin: 8rpx 0;
}
.tiaomu .information .title {
  flex: 1;
  margin: 0 12rpx;
}
.tiaomu .information image {
  width: 70rpx;
  height: 70rpx;
  margin-top: 8rpx;
}

