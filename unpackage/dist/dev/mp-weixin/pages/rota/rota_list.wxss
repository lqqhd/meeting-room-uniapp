
.btn {
  color: #000;
  width: 104rpx;
  height: 60rpx;
  font-size: 24rpx;
  padding: 0;
  border: 1px solid #E0EEEE;
  background: #E0EEEE;
  border-radius: 4px;
  margin: 15rpx 10rpx;
  text-align: center;
  line-height: 54rpx;
}
.btn-selected {
  border: 1px solid red;
  color: white;
  background: red;
}
.comment-btn {
  display: flex;
}
.btn-much {
  width: 50%;
  text-align: center;
  display: flex;
  flex-wrap: wrap;
}


.input-box {
  background: #f4f4f4;
}
.input-box input {
  background: white;
  padding: 6px;
}
.result-tip {
  font-size: 12px;
  color: #212121;
  padding-top: 20rpx;
  padding-left: 34rpx;
  padding-bottom: 15rpx;
}
.input-placeholder {
  font-size: 14px;
}
.loading-icon {
  display: flex;
  justify-content: center;
  margin: 12px;
}
.dept-title {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  background: #f4f4f4;
}
.statement {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 32rpx;
  border-bottom: 2rpx solid #f4f4f4;
  padding: 16rpx 0;
  color: #212121;
}
.statement .information {
  display: flex;
  align-items: center;
  flex: 1;
}
.statement .icon {
  margin-right: 16rpx;
  display: flex;
  align-items: center;
}
.statement .icon image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 5px;
}
.statement .st-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
.statement .st-title > view {
  margin-bottom: 4rpx;
}
.statement .st-title .title {
  font-size: 28rpx;
}
.statement .st-title .description {
  color: #757575;
  font-size: 24rpx;
}
.statement .st-title .time {
  color: #757575;
  font-size: 24rpx;
}
.statement .transfer-icon {
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

