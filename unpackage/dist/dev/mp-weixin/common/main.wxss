.theme-color-red {
  color: #2196F3;
}
.zan-btn {
  line-height: 40px;
  height: 40px;
  font-size: 34rpx;
  margin: 30rpx;
}
.zan-loadmore--nodata {
  margin: auto !important;
}
.ljt-btn {
  line-height: 60rpx;
  height: 60rpx;
  color: white;
  background-color: #2196F3;
  padding-left: 15rpx;
  padding-right: 15rpx;
  border-radius: 4rpx;
  font-size: 34rpx;
  text-align: center;
  vertical-align: middle;
}
.ljt-btn:after,
button::after {
  border: 0;
}
.btn-shadow {
  box-shadow: 4rpx 8rpx 12rpx #ccc;
}
.pull-right {
  float: right;
}
.pull-left {
  float: left;
}
.overflow-hide {
  overflow: hidden;
}
.income {
  color: red;
}
.expend,
.repayment {
  color: green;
}
.transfer {
  color: orange;
}
.income-border {
  border-bottom: 1px solid red;
}
.expend-border {
  border-bottom: 1px solid green;
}
.surplus {
  color: black;
}
.surplus-border {
  border-bottom: 1px solid black;
}
.orange {
  color: orange;
}
.blue {
  color: blue;
}
.col999 {
  color: #999;
}
.text-grey {
  color: #757575;
}
.fs12 {
  font-size: 24rpx;
}
.fs14 {
  font-size: 28rpx;
}
.fs16 {
  font-size: 32rpx;
}
.fs18 {
  font-size: 36rpx;
}
.fs20 {
  font-size: 40rpx;
}
.fs21 {
  font-size: 42rpx;
}
.fs24 {
  font-size: 48rpx;
}
.fs32 {
  font-size: 64rpx;
}
.ljt-icon {
  width: 50rpx;
  height: 50rpx;
}

